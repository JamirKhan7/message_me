<div class="app-main">
  <div class="row g-0 h-100 justify-content-center">
    <div class="col-md-4 d-none">
      <div class="list-group rounded-0 list-group-flush">
        <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
          Home
        </a>
        <a href="#" class="list-group-item list-group-item-action">Messages</a>
        <a href="#" class="list-group-item list-group-item-action">Friends</a>
      </div>
    </div>
    <div class="col-md-8 chat-area bg-secondary-subtle border-start card rounded-0 shadow border-0">
      <div class="card-body p-0 h-100">
        <div class="chat-window h-100">
          <!-- Chat Header -->
          <div class="chat-header bg-body-tertiary d-none">
            <div class="d-flex align-items-center">
              <div class="ms-2">John Doe</div>
            </div>
            <div>Actions</div>
          </div>

          <!-- Chat Body -->
          <div class="chat-body d-flex flex-column" id="messagesContainer">            
            <%= render @messages %>
          </div>

          <!-- Chat Footer -->
          <div class="chat-footer bg-body-tertiary border-top">
            <%= form_with(model: @message,
                          url: message_path,
                          local: true) do |f| %>
              <%= f.text_field :body, class: "rounded form-control", placeholder: "Type a message" %>
              <%= f.hidden_field :user_id_hidden, value: current_user.id %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>