<% message_creator = message.user == current_user %>
<div class='<%= "message #{ message_creator ? "sent" : "received" }" %>'>
  <div class='<%= "bubble shadow-sm rounded-1 #{ message_creator ? "bg-primary-subtle" : "bg-white" }" %>'>
    <div class='<%= "message-username #{ "d-none" if message_creator }" %>'><strong><%= message.user&.username %></strong></div>
    <div class="mt-1"><%= message.body %></div>
  </div>
</div>